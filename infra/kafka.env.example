# Example configuration for local Kafka/Schema Registry credentials.
# Copy to kafka.env and fill with your actual secrets before running the ingestor.
KAFKA_GROUP=ingestor
KAFKA_BOOTSTRAP=pkc-xxxxx.us-east1.gcp.confluent.cloud:9092
KAFKA_API_KEY=your-kafka-key
KAFKA_API_SECRET=your-kafka-secret

SCHEMA_REGISTRY_URL=https://psrc-xxxxx.us-east1.gcp.confluent.cloud
SCHEMA_REGISTRY_KEY=your-schema-key
SCHEMA_REGISTRY_SECRET=your-schema-secret

WATCH_TOPIC=aerosparks.watch
RATE_TOPIC=aerosparks.rate
RECO_REQ_TOPIC=aerosparks.reco_requests
RECO_RESP_TOPIC=aerosparks.reco_responses
